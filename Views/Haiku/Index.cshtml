@model _5_7_5.Models.HaikuModel
@{
    ViewData["Title"] = "5-7-5";
}

<style>
    body {
        background-color: #f8f8f8;
        font-family: 'Noto Sans', 'Helvetica Neue', Arial, sans-serif;
    }

    .main-container {
        max-width: 900px;
        margin: 2rem auto;
    }

    .app-title {
        font-family: 'Noto Serif JP', 'Georgia', serif;
        font-size: 3rem;
        color: #d42c2c;
        margin-bottom: 0.5rem;
        position: relative;
    }

        .app-title:after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background-color: #d42c2c;
        }

    .app-subtitle {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 2rem;
    }

    .card {
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    .card-body {
        padding: 2rem;
    }

    .form-control {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 0.75rem;
        font-size: 1rem;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #d42c2c;
            box-shadow: 0 0 0 0.2rem rgba(212, 44, 44, 0.25);
        }

    .haiku-preview {
        font-family: 'Noto Serif', serif;
        font-size: 1.2rem;
        line-height: 1.8;
    }

    .japanese-haiku {
        font-family: 'Noto Serif JP', 'Yu Mincho', serif;
        font-size: 1.7rem;
        line-height: 2;
        margin: 0 auto;
        padding: 1.5rem;
        background-color: #f9f4f4;
        border-radius: 4px;
    }

    .romaji-haiku {
        font-family: 'Noto Serif', serif;
        font-size: 1.2rem;
        line-height: 1.8;
        color: #666;
        margin-bottom: 2rem;
    }

    .translation-card {
        min-height: 300px;
        border: 1px solid #eee;
        border-radius: 8px;
        background-color: white;
    }

    .btn-primary {
        background-color: #d42c2c;
        border-color: #d42c2c;
    }

        .btn-primary:hover,
        .btn-primary:focus {
            background-color: #b62525;
            border-color: #b62525;
        }

    .btn-success {
        background-color: #950000;
        border-color: #950000;
    }

        .btn-success:hover,
        .btn-success:focus {
            background-color: #7e0000;
            border-color: #7e0000;
        }

    .btn-secondary {
        background-color: #666;
        border-color: #666;
    }

    .badge-success {
        background-color: #28a745;
    }

    .badge-danger {
        background-color: #dc3545;
    }

    .progress-bar-success {
        background-color: #28a745;
    }

    .progress-bar-danger {
        background-color: #dc3545;
    }

    .progress-bar-warning {
        background-color: #ffc107;
    }

    .line-label {
        font-family: 'Noto Serif JP', serif;
        display: inline-block;
        width: 25px;
        height: 25px;
        line-height: 25px;
        text-align: center;
        border-radius: 50%;
        background-color: #d42c2c;
        color: white;
        margin-right: 10px;
    }

    .validation-status {
        border-radius: 8px;
    }

    .status-icon {
        font-size: 1.5rem;
        margin-right: 0.5rem;
    }
</style>

<div class="container main-container">
    <div class="text-center">
        <h1 class="app-title">5-7-5</h1>
        <p class="app-subtitle">Creator de haiku în limba română cu traducere în japoneză</p>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="ValidateHaiku" method="post">
                <div class="row">
                    <!-- Romanian Column -->
                    <div class="col-md-6">
                        <h4 class="text-center mb-4" style="color: #d42c2c;">Haiku în Română</h4>

                        <!-- Line 1 -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label class="form-label">
                                    <span class="line-label">5</span> Prima linie
                                </label>
                                <button type="submit" name="action" value="generate"
                                        class="btn btn-secondary btn-sm" title="Generează un haiku nou">
                                    <i class="bi bi-magic"></i> Generează haiku
                                </button>
                            </div>
                            <input asp-for="Line1" class="form-control" autocomplete="off" placeholder="Prima linie (5 silabe)" />
                            @if (Model.Line1SyllableCount > 0)
                            {
                                <div class="mt-2 d-flex align-items-center">
                                    <div class="progress flex-grow-1 me-2" style="height: 8px; border-radius: 4px;">
                                        <div class="progress-bar @(Model.Line1SyllableCount == 5 ? "bg-success" : Model.Line1SyllableCount > 5 ? "bg-danger" : "bg-warning")"
                                             role="progressbar"
                                             style="width: @(Math.Min(Model.Line1SyllableCount * 20, 100))%">
                                        </div>
                                    </div>
                                    <span class="badge @(Model.Line1SyllableCount == 5 ? "bg-success" : "bg-danger")" style="width: 40px;">
                                        @Model.Line1SyllableCount/5
                                    </span>
                                </div>
                            }
                        </div>

                        <!-- Line 2 -->
                        <div class="mb-4">
                            <label class="form-label">
                                <span class="line-label">7</span> A doua linie
                            </label>
                            <input asp-for="Line2" class="form-control" autocomplete="off" placeholder="A doua linie (7 silabe)" />
                            @if (Model.Line2SyllableCount > 0)
                            {
                                <div class="mt-2 d-flex align-items-center">
                                    <div class="progress flex-grow-1 me-2" style="height: 8px; border-radius: 4px;">
                                        <div class="progress-bar @(Model.Line2SyllableCount == 7 ? "bg-success" : Model.Line2SyllableCount > 7 ? "bg-danger" : "bg-warning")"
                                             role="progressbar"
                                             style="width: @(Math.Min(Model.Line2SyllableCount * 100 / 7, 100))%">
                                        </div>
                                    </div>
                                    <span class="badge @(Model.Line2SyllableCount == 7 ? "bg-success" : "bg-danger")" style="width: 40px;">
                                        @Model.Line2SyllableCount/7
                                    </span>
                                </div>
                            }
                        </div>

                        <!-- Line 3 -->
                        <div class="mb-4">
                            <label class="form-label">
                                <span class="line-label">5</span> A treia linie
                            </label>
                            <input asp-for="Line3" class="form-control" autocomplete="off" placeholder="A treia linie (5 silabe)" />
                            @if (Model.Line3SyllableCount > 0)
                            {
                                <div class="mt-2 d-flex align-items-center">
                                    <div class="progress flex-grow-1 me-2" style="height: 8px; border-radius: 4px;">
                                        <div class="progress-bar @(Model.Line3SyllableCount == 5 ? "bg-success" : Model.Line3SyllableCount > 5 ? "bg-danger" : "bg-warning")"
                                             role="progressbar"
                                             style="width: @(Math.Min(Model.Line3SyllableCount * 20, 100))%">
                                        </div>
                                    </div>
                                    <span class="badge @(Model.Line3SyllableCount == 5 ? "bg-success" : "bg-danger")" style="width: 40px;">
                                        @Model.Line3SyllableCount/5
                                    </span>
                                </div>
                            }
                        </div>

                        @if (Model.Line1SyllableCount > 0 && Model.Line2SyllableCount > 0 && Model.Line3SyllableCount > 0)
                        {
                            <div class="mb-4 p-3 @(Model.IsValid ? "bg-success" : "bg-danger") text-white validation-status">
                                <div class="d-flex align-items-center justify-content-center">
                                    <span class="status-icon">@(Model.IsValid ? "✓" : "✗")</span>
                                    <span>
                                        @(Model.IsValid
                                            ? "Haiku-ul respectă structura 5-7-5"
                                            : "Haiku-ul nu respectă structura 5-7-5")
                                    </span>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Japanese Column -->
                    <div class="col-md-6">
                        <h4 class="text-center mb-4" style="color: #d42c2c;">Traducere în Japoneză</h4>
                        @if (Model.IsTranslated)
                        {
                            <div class="translation-card">
                                <div class="card-body text-center">
                                    <div class="japanese-haiku mb-4">
                                        <p class="mb-2">@Model.JapaneseLine1</p>
                                        <p class="mb-2">@Model.JapaneseLine2</p>
                                        <p class="mb-2">@Model.JapaneseLine3</p>
                                    </div>
                                    <div class="mt-4">
                                        <h5 style="color: #666;">Romaji (Transcriere fonetică)</h5>
                                        <div class="romaji-haiku">
                                            <p class="mb-2">@Model.RomajiLine1</p>
                                            <p class="mb-2">@Model.RomajiLine2</p>
                                            <p class="mb-2">@Model.RomajiLine3</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="translation-card">
                                <div class="card-body d-flex align-items-center justify-content-center">
                                    <div class="text-center text-muted">
                                        <img src="https://img.icons8.com/color/96/000000/torii.png" style="opacity: 0.3; width: 64px;" />
                                        <p class="mt-3">Apasă butonul "Traduce în Japoneză" pentru a vedea traducerea haiku-ului.</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                @if (Model.HasAudio)
                {
                    <div class="mt-4">
                        <div class="card audio-controls p-3">
                            <h5 class="text-center mb-3"><i class="bi bi-volume-up"></i> Ascultă Haiku</h5>

                            <div class="d-flex justify-content-between mb-3">
                                <div>
                                    <label class="form-label">
                                        <span class="line-label" style="background-color: #666;">RO</span> Română
                                    </label>
                                    <audio controls style="height: 40px;" src="@Model.RomanianAudioPath" preload="metadata">
                                        Browser-ul tău nu suportă elementul audio.
                                    </audio>
                                </div>

                                <div>
                                    <label class="form-label">
                                        <span class="line-label" style="background-color: #666;">JA</span> Japoneză
                                    </label>
                                    <audio controls style="height: 40px;" src="@Model.JapaneseAudioPath" preload="metadata">
                                        Browser-ul tău nu suportă elementul audio.
                                    </audio>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Buttons -->
                <div class="row mt-4">
                    <div class="col-12 text-center">
                        <button type="submit" name="action" value="validate" class="btn btn-primary me-2 px-4">
                            Verifică Silabele
                        </button>
                        <button type="submit" name="action" value="translate" class="btn btn-success px-4"
                        @(Model.IsValid ? "" : "disabled")>
                            Traduce în Japoneză
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3" style="color: #999; font-size: 0.9rem;">
        © 2025 | 5-7-5 Haiku Creator | Universitatea "Alexandru Ioan Cuza" din Iași
    </div>
</div>

